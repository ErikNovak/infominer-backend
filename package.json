{
    "name": "infominer",
    "version": "1.0.0",
    "description": "The infominer component",
    "main": "./dist/server.js",
    "scripts": {
        "start": "ts-node ./src/server.ts --DEV_MODE",
        "start:watch": "tsnd --respawn ./src/server.ts --DEV_MODE",
        "build": "tsc --project .",
        "postbuild": "cpy --cwd=src --parents '**/*.json' ../dist/",
        "deploy": "npm run build && node ./dist/server.js",
        "test": "echo \"Error: no test specified\" && exit 0",
        "lint": "eslint './src/**/*.{js,ts}' --quiet --fix",
        "clean": "rm -rf ./data && rm -rf ./tmp && cd ./load && node downgrade && node upgrade",
        "dockerize": "docker build -t eriknovak/infominer ."
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Infominer-JSI/infominer.git"
    },
    "author": "Erik Novak",
    "contributors": [
        {
            "name": "Erik Novak",
            "email": "erik.novak@ijs.si"
        }
    ],
    "license": "BSD-2-Clause",
    "bugs": {
        "url": "https://github.com/Infominer-JSI/infominer/issues"
    },
    "homepage": "https://github.com/Infominer-JSI/infominer#readme",
    "devDependencies": {
        "@types/cookie-parser": "^1.4.2",
        "@types/express": "^4.17.11",
        "@types/minimist": "^1.2.1",
        "@types/morgan": "^1.9.2",
        "@types/multer": "^1.4.5",
        "@types/node": "^14.14.22",
        "@types/passport-google-oauth20": "^2.0.6",
        "@types/passport-twitter": "^1.0.36",
        "@types/pg": "^7.14.9",
        "@types/serve-favicon": "^2.5.2",
        "@typescript-eslint/eslint-plugin": "^4.14.0",
        "@typescript-eslint/parser": "^4.14.0",
        "cpy-cli": "^3.1.1",
        "eslint": "^7.18.0",
        "husky": "^4.3.8",
        "ts-node-dev": "^1.1.1",
        "typescript": "^4.1.3"
    },
    "dependencies": {
        "cookie-parser": "^1.4.5",
        "csv": "^5.3.2",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "express-session": "^1.17.1",
        "express-validator": "^6.9.2",
        "minimist": "^1.2.5",
        "morgan": "^1.10.0",
        "multer": "^1.4.2",
        "passport": "^0.4.1",
        "passport-google-oauth20": "^2.0.0",
        "passport-twitter": "^1.0.4",
        "pg": "^8.5.1",
        "qminer": "^9.3.2",
        "winston": "^3.3.3",
        "winston-daily-rotate-file": "^4.5.0"
    }
}
