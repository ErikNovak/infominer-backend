{
    "compilerOptions": {
        /* Visit https://aka.ms/tsconfig.json to read more about this file */
        "target": "ES2020",
        "module": "commonjs",
        "sourceMap": true,
        "outDir": "./build",
        "downlevelIteration": true,
        "strict": true,
        "typeRoots": ["@types", "node_modules/@types"],
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["./src/**/*"]
}
